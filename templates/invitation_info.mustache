{{!
    @template local_invitation/invitation_info
}}

<div class="row">
    <div class="col-lg-7">
        <div class="card invitationsettings mb-3 bg-light border border-primary">
            <div class="card-body">
                <div class="card-title">
                    <h2>{{title}}</h2>
                </div>
                <div class="invitation-url">
                    <a href="{{{url}}}">{{{url}}}</a>
                </div>
                <div class="row">
                    <div class="col-lg-7">
                        <table class="table table-sm">
                            <tbody>
                                <tr>
                                    <th width="120px">
                                        {{#str}} available_from, local_invitation {{/str}}
                                    </th>
                                    <td>
                                        {{timestart}}
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        {{#str}} available_to, local_invitation {{/str}}
                                    </th>
                                    <td>
                                        {{timeend}}
                                    </td>
                                </tr>
                                <tr>
                                    {{#freeslots}}
                                        <th class="text-success">
                                            {{#str}} free_slots, local_invitation {{/str}}
                                        </th>
                                        <td class="text-success">
                                            {{freeslots}} <i class="fa fa-check"></i>
                                        </td>
                                    {{/freeslots}}
                                    {{^freeslots}}
                                        <th class="text-danger">
                                            {{#str}} free_slots, local_invitation {{/str}}
                                        </th>
                                        <td class="text-danger">
                                            {{freeslots}} <i class="fa fa-times"></i>
                                        </td>
                                    {{/freeslots}}
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="invitation-note">
                    <span class="font-weight-bold">{{#str}} note, local_invitation {{/str}}</span>
                    <span>{{note}}</span>
                </div>
            </div>
        </div>
    </div>
</div>
